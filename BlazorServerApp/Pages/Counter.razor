@page "/counter"
@using MediatR

@inject IMediator Mediator

<h1>Counter</h1>

<p>Current count: @currentCount modificado</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount +=
        Mediator.Send(new Application.Queries.Products.GetProductsQuery(x => true)).Result.Count();        
    }
}
